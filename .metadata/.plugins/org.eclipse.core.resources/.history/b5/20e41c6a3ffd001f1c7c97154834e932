package util;

import java.awt.event.ActionEvent;
import java.awt.event.ActionListener;

import javax.swing.Timer;

public class StopWatch {
	
	private static long starTime;
	
	private static Timer timer;
	
	public static long getStarTime() {
		return starTime;
	}

	public static void setStarTime(long passedstarTime) {
		starTime = passedstarTime;
	}



	private static void iniciarCronometro() {
        Long tempoInicio = System.currentTimeMillis();
        timer = new Timer(10, new ActionListener() {
            @Override
            public void actionPerformed(ActionEvent e) {
                long tempoDecorrido = System.currentTimeMillis() - tempoInicio;
                int minutos = (int) (tempoDecorrido / 60000);
                int segundos = (int) ((tempoDecorrido % 60000) / 1000);
                int milissegundos = (int) (tempoDecorrido % 1000);

                labelTempo.setText(String.format("%02d:%02d:%03d", minutos, segundos, milissegundos));
            }
        });
	}
}