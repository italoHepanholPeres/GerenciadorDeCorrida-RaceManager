package view;

import java.awt.BorderLayout;
import java.awt.Container;
import java.awt.Font;
import java.awt.GridBagLayout;
import java.awt.GridLayout;

import javax.swing.JButton;
import javax.swing.JFrame;
import javax.swing.JLabel;
import javax.swing.JPanel;
import javax.swing.JTextField;

import model.Race;
import util.RunnersListPanel;

public class SimulateRaceScreen extends JFrame{
	
	private static final long serialVersionUID = 1L;

	public SimulateRaceScreen(Race race) {
		this.setTitle("Cron√¥metro");
		this.setSize(600, 400);
		this.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
		this.setResizable(false);
		
		Container c = this.getContentPane();
		c.setLayout(new BorderLayout());
		
		JPanel stopWatchPanel = new JPanel();
		this.setLayout(new BorderLayout());
		
		JLabel stopWatch = new JLabel("00:00:0000");
		stopWatch.setFont(new Font("Arial", Font.BOLD, 32));
		stopWatchPanel.add(stopWatch,BorderLayout.CENTER);
		
		JPanel completeRacePanel = new JPanel();
		completeRacePanel.setLayout(new GridLayout(2,2,1,1));
		
		JLabel enterId = new JLabel("Informe o id de quem terminou a corrida:");
		JTextField idInput = new JTextField(10);
		JButton completeBttn = new JButton("Completar corrida");
		completeRacePanel.add(enterId);
		completeRacePanel.add(idInput);
		completeBttn.add(completeBttn);
				
		stopWatch.add(completeRacePanel);
		
		
		
		RunnersListPanel list = new RunnersListPanel(race);
		
		
		c.add(stopWatchPanel, BorderLayout.NORTH);
		c.add(list, BorderLayout.SOUTH);
		this.setVisible(true);
	}
}
