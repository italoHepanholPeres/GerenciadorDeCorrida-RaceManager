package util;

import java.time.LocalDate;
import java.time.format.DateTimeFormatter;
import java.time.format.DateTimeParseException;

import javax.swing.JOptionPane;

public class DateValidator {
	public static void validateDateToRace(String date, DateTimeFormatter format) {
		LocalDate now = LocalDate.now();
		try {
			LocalDate testDate = LocalDate.parse(date,format);
		
			if(testDate.isBefore(now)) {
				JOptionPane.showMessageDialog(null, "A data não pode ja ter passado");
			}else if(testDate.isEqual(now)){
				JOptionPane.showMessageDialog(null, "A data não pode ja ter passado");
			}
		}catch (DateTimeParseException e) {
			JOptionPane.showMessageDialog(null, "A data tem estar no formato dd/MM/yyyy HH:mm e tem que ser uma data válida");
		}	
	}
	
	public static void validateBirthDate(String dateBirth, DateTimeFormatter format) {
		LocalDate now = LocalDate.now();
		
		try {
			LocalDate testDate = LocalDate.parse(dateBirth,format);
			
			if(testDate.isAfter(now)) {
				JOptionPane.showMessageDialog(null, "A data já tem que ter passado");
			}else if(testDate.isEqual(now)){
				JOptionPane.showMessageDialog(null, "A data já tem que ter passado");
			}
		} catch (Exception e) {
			JOptionPane.showMessageDialog(null, "A data tem estar no formato dd/MM/yyyy HH:mm e tem que ser uma data válida");
		}
			
	}
	
	
}
