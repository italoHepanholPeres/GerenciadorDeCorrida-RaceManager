package util;

import java.awt.event.ActionEvent;
import java.awt.event.ActionListener;

import javax.swing.Timer;

public class StopWatch {
	
	private static long starTime;
	private static Timer timer;
	private static long elapsedTime;
	
	public static long getStarTime() {
		return starTime;
	}

	public static void setStarTime(long passedstarTime) {
		starTime = passedstarTime;
	}

	private static void StatStopWatch() {
        starTime = System.currentTimeMillis();
        timer = new Timer(10, new ActionListener() {
            @Override
            public String actionPerformed(ActionEvent e) {
                elapsedTime = System.currentTimeMillis() - starTime;
                int minutes = (int) (elapsedTime / 60000);
                int seconds = (int) ((elapsedTime % 60000) / 1000);
                int miliSeconds = (int) (elapsedTime % 1000);
                
                return String.format("%02d:%02d:%03d", minutes, seconds, miliSeconds);
            }
        });
	}
}